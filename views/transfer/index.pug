extends ../layouts/common.pug

block content

  h1 Transfer Money
  form(method="POST")
    input(type="hidden", name="_csrf", value= csrfToken)
    .form-group.mt-5
      .input-group
        .input-group-prepend
          span(class="input-group-text", style= "min-width: 100px") Account
        input(type= "text", class="form-control", name= "accountId", style= "max-width: 600px")
    .form-group.mt-2
      .input-group
        .input-group-prepend
          span(class="input-group-text", style= "min-width: 100px") Amount
        input(type= "number", class="form-control", name= "amount", style= "max-width: 600px")
    button(class="btn btn-outline-secondary mt-4") OK
