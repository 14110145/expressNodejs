extends ../layouts/common.pug

block content

  h1 Products
  .mt-4
  .my-card
    each product in products
      .card(style='width: 18rem;')
        img.card-img-top(src= product.image, alt='Card image cap')
        .card-body.my-card-body
          h5.card-title= product.name
          p.card-text= product.description
          a.btn.btn-primary.my-button(href='/cart/add/' + product.id) Add to cart
  nav(aria-label='Page navigation example').mt-4
    ul.pagination.justify-content-center
      li.page-item
        a.page-link.Previous(href='?page=' + (pages? parseInt(pages - 1) : 0)) Previous
      li.page-item
        a.page-link(href='?page=' + parseInt(pages))= pages
      li.page-item
        a.page-link(href='?page=' + parseInt(pages + 1))= pages + 1
      li.page-item
        a.page-link(href='?page=' + parseInt(pages + 2))= pages + 2
      li.page-item
        a.page-link(href='?page=' + parseInt(pages + 1)) Next
  
